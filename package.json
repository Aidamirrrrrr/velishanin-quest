{
  "name": "velizhanin-quest",
  "version": "1.0.0",
  "private": true,
  "description": "VELIZHANIN Quest - Telegram Bot + Mini App | Test Assignment",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @velizhanin-quest/api db:generate",
    "db:push": "pnpm --filter @velizhanin-quest/api db:push",
    "db:studio": "pnpm --filter @velizhanin-quest/api db:studio"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
